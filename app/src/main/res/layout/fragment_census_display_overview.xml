<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="de.jordsand.birdcensus.fragments.CensusDisplayOverviewFragment">

        <TextView
            android:id="@+id/census_display_tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/census_overview_duration_title"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/census_display_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/census_overview_duration"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/census_display_tv_duration"
            app:layout_constraintLeft_toRightOf="@+id/census_display_tv_duration"
            app:layout_constraintTop_toTopOf="@+id/census_display_tv_duration" />

        <TextView
            android:id="@+id/census_display_tv_observer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/census_overview_observer"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/census_display_tv_duration" />

        <TextView
            android:id="@+id/census_display_observer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:maxLines="3"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/census_display_tv_observer"
            app:layout_constraintTop_toTopOf="@+id/census_display_tv_observer"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/census_display_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:text="@string/census_overview_weather"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/census_display_tv_observer" />

        <TextView
            android:id="@+id/census_display_tv_water_gauge"
            android:text="@string/census_overview_water_gauge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/census_display_weather"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/census_display_water_gauge"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/census_display_tv_glaciation_lvl"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/census_display_tv_water_gauge"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/census_display_tv_water_gauge"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/census_display_tv_wind"
            android:text="@string/census_overview_tv_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/census_display_tv_water_gauge"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/census_display_wind"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/census_display_tv_glaciation_lvl"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/census_display_tv_wind"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/census_display_tv_wind"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/census_display_tv_precipitation"
            android:text="@string/census_overview_precipitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/census_display_tv_wind"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/census_display_precipitation"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/census_display_tv_glaciation_lvl"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/census_display_tv_precipitation"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/census_display_tv_precipitation"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/census_display_tv_visibility"
            android:text="@string/census_overview_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/census_display_tv_precipitation"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/census_display_visibility"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/census_display_tv_glaciation_lvl"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/census_display_tv_visibility"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/census_display_tv_visibility"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/census_display_tv_glaciation_lvl"
            android:text="@string/census_overview_glaciation_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/census_display_tv_visibility"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/census_display_glaciation_lvl"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/census_display_tv_glaciation_lvl"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/census_display_tv_glaciation_lvl"
            app:layout_constraintBottom_toBottomOf="@+id/census_display_tv_glaciation_lvl"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/census_display_sightings"
            android:text="@string/census_overview_observations"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/census_display_tv_glaciation_lvl"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/census_display_tv_different_species"
            android:text="@string/census_overview_different_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/census_display_sightings"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/census_display_different_species"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/census_display_tv_total_sightings"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/census_display_tv_different_species"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/census_display_tv_different_species"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/census_display_tv_total_sightings"
            android:text="@string/census_overview_total_observations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/census_display_tv_different_species"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/census_display_total_sightings"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/census_display_tv_total_sightings"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="@+id/census_display_tv_total_sightings"
            app:layout_constraintBottom_toBottomOf="@+id/census_display_tv_total_sightings"
            android:layout_marginBottom="0dp" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>



